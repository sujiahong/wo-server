{
    "appenders": {
        "out": {
            "type": "console"
        },
        "gate-server": {
            "type": "file",
            "filename": "./logs/gate-server.log"
        },
        "home-server": {
            "type": "file",
            "filename": "./logs/home-server.log"
        },
        "game-server":{
            "type": "file",
            "filename":"./logs/game-server.log" 
        }
    },
    "categories" :{
        "default": {
            "appenders": ["out"],
            "level": "info"
        },
        "gate-server": {
            "appenders": ["gate-server", "out"],
            "level": "all"
        },
        "home-server": {
            "appenders": ["home-server", "out"],
            "level": "all"
        },
        "game-server": {
            "appenders": ["game-server", "out"],
            "level": "all"
        }
    },
    "replaceConsole": true
}